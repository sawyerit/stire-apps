{
  "baseUrl": "${host}",
  "key": "reference",
  "lifecycle": {
    "installed": "/lifecycle/installed",
    "uninstalled": "/lifecycle/uninstalled"
  },
  "modules": {
    "chat:bot": [
      {
        "key": "bot-1",
        "mention": {
          "url": "/bot/mention"
        },
        "directMessage": {
          "url": "/bot/directmessage"
        }
      }
    ],
    "chat:bot:messages": [
      {
        "key": "bot-message-weather",
        "pattern": ".*weather.*",
        "url": "/bot/weather"
      }
    ],
    "chat:inputAction": [
      {
        "key": "inputaction-opendialog",
        "name": {
          "value": "Open App Dialog"
        },
        "target": "actionTarget-openDialog"
      }
    ],
    "chat:dialog": [
      {
        "key": "dialog-1",
        "title": {
          "value": "App Dialog"
        },
        "options": {
          "size": {
            "width": "500px",
            "height": "300px"
          },
          "primaryAction": {
            "key": "action-appendMessage",
            "name": {
              "value": "Append Message"
            }
          },
          "secondaryActions": [
            {
              "key": "dialogaction-closeDialog",
              "name": {
                "value": "Close"
              }
            },
            {
              "key": "dialogaction-openSidebar",
              "name": {
                "value": "Open Sidebar"
              }
            },
            {
              "key": "dialogaction-disableButton",
              "name": {
                "value": "Disable Button"
              }
            }
          ]
        },
        "url": "/module/dialog",
        "authentication": "jwt"
      },
      {
        "key": "dialog-configuration",
        "title": {
          "value": "App Configuration"
        },
        "options": {
          "size": {
            "width": "700px",
            "height": "500px"
          },
          "primaryAction": {
            "key": "action-save",
            "name": {
              "value": "Save"
            }
          },
          "secondaryActions": [
            {
              "key": "action-close",
              "name": {
                "value": "Close"
              }
            }
          ]
        },
        "url": "/module/config",
        "authentication": "jwt"
      }
    ],
    "chat:sidebar": [
      {
        "key": "sidebar-1",
        "name": {
          "value": "App Sidebar"
        },
        "url": "/module/sidebar",
        "authentication": "jwt"
      }
    ],
    "chat:glance": [
      {
        "key": "glance-1",
        "name": {
          "value": "App Glance"
        },
        "icon": {
          "url": "/public/img/logo.png",
          "url@2x": "/public/img/logo.png"
        },
        "target": "actionTarget-openSidebar",
        "queryUrl": "/module/glance/state",
        "authentication": "jwt"
      }
    ],
    "chat:messageAction": [
      {
        "key": "messageaction-opendialog",
        "name": {
          "value": "Send to dialog"
        },
        "target": "actionTarget-openDialog"
      },
      {
        "key": "messageaction-handlemessage",
        "name": {
          "value": "Send to service"
        },
        "target": "actionTarget-handleMessage"
      }
    ],
    "chat:configuration": [
      {
        "key": "configuration-1",
        "page": {
          "target": "dialog-configuration"
        },
        "state": {
          "url": "/module/config/state"
        },
        "authentication": "jwt"
      }
    ],
    "chat:webhook": [
      {
        "key": "webhook-conversations",
        "event": "conversation:updates",
        "url": "/webhooks/conversationEvent"
      },
      {
        "key": "webhook-roster",
        "event": "roster:updates",
        "url": "/webhooks/roster"
      }
    ],
    "chat:actionTarget": [
      {
        "key": "actionTarget-openSidebar",
        "openSidebar": {
          "key": "sidebar-1"
        }
      },
      {
        "key": "actionTarget-openDialog",
        "openDialog": {
          "key": "dialog-1"
        }
      },
      {
        "key": "actionTarget-handleCardAction",
        "callService": {
          "url": "/actions/action/handleCardAction"
        }
      },
      {
        "key": "actionTarget-handleMessage",
        "callService": {
          "url": "/actions/action/handleMessage"
        }
      },
      {
        "key": "reference-action-updateCard",
        "callService": {
          "url": "/actions/action/updateCard"
        }
      }
    ]
  }
}

